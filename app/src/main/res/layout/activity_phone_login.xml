<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PhoneLoginActivity"
    android:background="@drawable/gradient">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >
        <EditText
            android:id="@+id/phone_number_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter Phone Number"
            android:textSize="30dp"
            android:textColor="#8B16E7D6"
            android:textStyle="bold"
            android:padding="10dp"
            android:textAlignment="center"
            android:layout_marginTop="100dp"
            android:layout_marginHorizontal="5dp"
            android:layout_gravity="center"

            />
        <Button
            android:id="@+id/request_code"
            android:layout_below="@+id/phone_number_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="SEND VERIFICATION CODE"
            android:textSize="20dp"
            android:textColor="#8B16E7D6"
            android:textStyle="bold"
            android:padding="10dp"

            android:layout_marginTop="10dp"

            android:layout_gravity="center"

            />
        <EditText
            android:id="@+id/enter_otpcode"
            android:layout_width="200dp"

            android:layout_below="@+id/request_code"
            android:layout_height="30dp"
            android:hint="Enter otp"
            android:textSize="20dp"
            android:textColor="#8B16E7D6"
            android:textStyle="bold"

            android:textAlignment="center"
            android:layout_marginTop="10dp"
            android:background="#ffffff"
            android:layout_gravity="center"



            />
        <Button
            android:id="@+id/phone_login_verify_button"
            android:layout_below="@+id/enter_otpcode"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="VERIFY"
            android:textSize="20dp"
            android:textColor="#8B16E7D6"
            android:textStyle="bold"


            android:textAlignment="center"
            android:layout_marginTop="30dp"

            android:layout_gravity="center"


            />
    </LinearLayout>

</RelativeLayout>