<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="5dp"
        >
        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_gravity="center_vertical"
            android:padding="2dp"
            android:id="@+id/model_profile_image"
            android:src="@drawable/profile_image"
            ></de.hdodenhof.circleimageview.CircleImageView>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="20dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:orientation="horizontal">
                <de.hdodenhof.circleimageview.CircleImageView
                    android:layout_marginLeft="1dp"
                    android:id="@+id/model_user_onlinestatus"
                    android:layout_width="10dp"
                    android:layout_height="10dp"
                    android:layout_gravity="center"



                    android:src="@drawable/onlineicon"></de.hdodenhof.circleimageview.CircleImageView>

                <TextView
                    android:id="@+id/model_user_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:gravity="left"
                    android:hint="CONTACT NAME"
                    android:inputType="textImeMultiLine"
                    android:textSize="19dp"
                    android:textStyle="bold">

                </TextView>

            </LinearLayout>

            <TextView
                android:id="@+id/model_user_status"

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:layout_marginTop="2dp"
                android:gravity="left"

                android:hint="status"
                android:padding="4dp"
                android:inputType="textImeMultiLine"
                android:textSize="15dp"></TextView>
        </LinearLayout>

    </LinearLayout>

</LinearLayout>